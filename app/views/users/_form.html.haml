= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :user_name
    = f.text_field :user_name
    %a *
  %br/
  .field
    = f.label :email
    = f.text_field :email
    %a *
  %br/
  .field
    = f.label "First Name"
    = f.text_field :f_name
  %br/
  .field
    = f.label "Last Name"
    = f.text_field :l_name
  %br/
  .field
    = f.label :password
    = f.password_field :password
    %a *
  %br/
  .field
    = f.label :confirmation
    = f.password_field :password_confirmation
    %a *
  .actions
    = f.submit 'Sign Up!'